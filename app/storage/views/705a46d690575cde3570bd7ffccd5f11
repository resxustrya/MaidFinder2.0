<?php $__env->startSection('content'); ?>
 <div class="row"> 
    <div class="col s12 m12 l6 offset-l2">
        <h4>Create Job</h4>
        <div class="card-panel animated bounce">
            <form action="<?php echo asset('/applicant/crate/job'); ?>" method="GET" id="job-form">
                <div class="row">
                    <h6 style="font-size: 1.3em;">What job do you need ?</h6>
                </div>
                <br />
                <div class="row">
                    <select class="icons" name="jobtype" id="jobtype">
                        <?php $jobtype = JobTypes::all(); ?>
                        <option value="" selected disabled="">Select helper type</option>
                        <?php foreach($jobtype as $type): ?>
                            <option value="<?php echo $type->jobtypeid; ?>"><?php echo $type->description; ?> </option>
                        <?php endforeach; ?>
                    </select>
                </div>
                <br />
                <div class="row">
                    <div class="col s12 m12 l12 center">
                        <input type="submit" value="Ok" name="submit" class="btn blue"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<?php $__env->stopSection(); ?>


<?php $__env->startSection('css'); ?>


<?php $__env->stopSection(); ?>

<?php $__env->startSection('js'); ?>
    @parent
    <script>
        $(document).ready(function() {
            $('#job-form').submit(function(e){
                var val = $('#jobtype').val();
                if(val == "" || val == null) {
                    e.preventDefault();
                    alert('Please select helper type');
                } else {
                    $(this).submit();
                }
            });
        });
    </script>
<?php $__env->stopSection(); ?>
